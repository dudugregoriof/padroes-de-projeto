public class SaldoComReajuste {
    public static void main(String[] args) {
        double saldo = 1000.0;
        double reajuste = saldo * 0.01;
        double saldoComReajuste = saldo + reajuste;

        System.out.println("Saldo original: " + saldo);
        System.out.println("Reajuste de 1%: " + reajuste);
        System.out.println("Saldo com reajuste: " + saldoComReajuste);
    }
}
